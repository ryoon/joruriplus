<td id="snsMenu">
<div id="snsMenuContainer">
<div class="profileContainer">
  <%= render :partial => "sns/admin/base/profile_menu"%>
</div>

</div>
</td>

<td id="snsContent" class="departmentMember" colspan="2">

<div class="bread_crumbs">

</div>

<div class="menu">
  <div class="leftMenu">
   <h2>課員の状況一覧</h2>

  <%if @users.blank?%>
  <span>表示するユーザーが存在しません。</span>
  <%else%>
  <table class="list">
    <%for item in @users%>
    <tr>
      <td class="name">
      <%
      image_str =image_tag(item.profile_photo_path(true), :alt => item.name, :align => 'center', :border => 0, :width=>50)
      link_str = item.name
      %>
      <%=link_to(image_str , "/_admin/profile/#{item.account}" , :class=>"picture")%>
      <%=link_to(raw(link_str) , "/_admin/profile/#{item.account}" )%>
      </td>
      <td >
        <%=hbr item.message_show%>
      </td>
    </tr>
    <%end%>
  </table>
  <%end%>
  </div>
</div>
</td>