<%
if link_str=="更新"
  link_class = "refreshLink"
else
  link_class = "loadLink"
end
%>
<%=link_to link_str, "javascript:void(0);",  :id => link_class,
:onclick=>%Q(new Ajax.Request("#{request_uri}", {"method": "get"}); this.removeAttribute("href"); this.onclick=null; this.innerHTML="Loading..."; return false;)%>